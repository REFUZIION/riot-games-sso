{
    "name": "fuziion/riot-games-sso",
    "description": "A simple and efficient PHP package for implementing Riot Games SSO authentication. Works with any PHP framework (Laravel, Symfony, CodeIgniter) or plain PHP projects.",
    "type": "library",
    "keywords": [
        "riot-games",
        "sso",
        "oauth",
        "authentication",
        "laravel",
        "php"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "fuziion_dev",
            "email": "info@fuziion.nl",
            "homepage": "https://fuziion.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Fuziion\\RiotGamesSSO\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fuziion\\RiotGamesSSO\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Fuziion\\RiotGamesSSO\\RiotGamesSSOServiceProvider"
            ],
            "aliases": {
                "RiotGames": "Fuziion\\RiotGamesSSO\\Facades\\RiotGames"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
